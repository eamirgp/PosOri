@inject IJSRuntime JS

<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm topbar">
    <div class="container-fluid">
        <button class="btn btn-link text-dark d-lg-none me-2 sidebar-toggle" 
                type="button" 
                @onclick="ToggleSidebar">
            <i class="bi bi-list fs-4"></i>
        </button>

        <span class="navbar-brand mb-0 h1 d-lg-none">
            <i class="bi bi-shop text-primary me-1"></i>
            POS
        </span>

        <div class="ms-auto d-flex align-items-center gap-2">
            <button class="btn btn-link text-dark position-relative" title="Notificaciones">
                <i class="bi bi-bell fs-5"></i>
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" 
                      style="font-size: 0.65rem;">
                    3
                </span>
            </button>

            <div class="vr d-none d-lg-block"></div>

            <div class="d-none d-lg-block">
                <div class="d-flex align-items-center">
                    <div class="me-2 text-end">
                        <div class="small fw-semibold">Usuario Admin</div>
                        <div class="text-muted" style="font-size: 0.75rem;">Administrador</div>
                    </div>
                    <div class="avatar-circle bg-primary text-white">
                        <i class="bi bi-person-fill"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>

<!-- Overlay para cerrar sidebar en mÃ³viles -->
<div class="sidebar-overlay @(IsSidebarOpen ? "show" : "")" @onclick="CloseSidebar"></div>

<style>
    .topbar {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1001;
        height: 60px;
    }

    .sidebar-toggle {
        padding: 0.5rem;
        line-height: 1;
    }

    .sidebar-toggle:hover {
        background-color: #f8f9fa;
    }

    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }

    .sidebar-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 999;
        display: none;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .sidebar-overlay.show {
        display: block;
        opacity: 1;
    }

    @@media (min-width: 769px) {
        .topbar {
            left: 260px;
        }
    }
</style>

@code {
    [Parameter]
    public EventCallback OnToggleSidebar { get; set; }

    [Parameter]
    public bool IsSidebarOpen { get; set; }

    private async Task ToggleSidebar()
    {
        await OnToggleSidebar.InvokeAsync();
    }

    private async Task CloseSidebar()
    {
        if (IsSidebarOpen)
        {
            await OnToggleSidebar.InvokeAsync();
        }
    }
}
