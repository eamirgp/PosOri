@using Pos.App.Features.Category.Models
@using Pos.App.Features.IGVType.Models
@using Pos.App.Features.Product.Models
@using Pos.App.Features.UnitOfMeasure.Models
@using Pos.App.Services.Interfaces

@inject IProductService ProductService
@inject IUnitOfMeasureService UnitOfMeasureService
@inject IIGVTypeService IGVTypeService
@inject ICategoryService CategoryService
@inject IToastService ToastService

<div class="modal fade @(_show ? "show d-block" : "")" tabindex="-1" style="background-color: rgba(0,0,0,0.5);" @onclick="HandleBackdropClick">
    <div class="modal-dialog modal-lg modal-dialog-centered" @onclick:stopPropagation>
        <div class="modal-content shadow-lg">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="bi bi-plus-circle me-2"></i>
                    Crear Nuevo Producto
                </h5>
                <button type="button" class="btn-close btn-close-white" @onclick="Close" disabled="@_loading"></button>
            </div>

            <EditForm Model="_product" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />

                <div class="modal-body">
                    <div class="row g-3">
                        <!-- Código -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-upc-scan me-1"></i>
                                Código <span class="text-danger">*</span>
                            </label>
                            <InputText @bind-Value="_product.Code"
                                       class="form-control"
                                       placeholder="Ej: PROD001"
                                       maxlength="20"
                                       disabled="@_loading" />
                            <ValidationMessage For="@(() => _product.Code)" class="text-danger small" />
                        </div>

                        <!-- Nombre -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-tag me-1"></i>
                                Nombre <span class="text-danger">*</span>
                            </label>
                            <InputText @bind-Value="_product.Name"
                                       class="form-control"
                                       placeholder="Nombre del producto"
                                       maxlength="100"
                                       disabled="@_loading" />
                            <ValidationMessage For="@(() => _product.Name)" class="text-danger small" />
                        </div>

                        <!-- Unidad de Medida -->
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-rulers me-1"></i>
                                Unidad de Medida <span class="text-danger">*</span>
                            </label>
                            <InputSelect @bind-Value="_product.UnitOfMeasureId"
                                         class="form-select"
                                         disabled="@(_loading || !_unitOfMeasures.Any())">
                                <option value="@Guid.Empty">-- Seleccione --</option>
                                @foreach (var unitOfMeasure in _unitOfMeasures)
                                {
                                    <option value="@unitOfMeasure.Id">@unitOfMeasure.Description</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => _product.UnitOfMeasureId)" class="text-danger small" />
                        </div>

                        <!-- Afectación IGV -->
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-percent me-1"></i>
                                Afectación IGV <span class="text-danger">*</span>
                            </label>
                            <InputSelect @bind-Value="_product.IGVTypeId"
                                         class="form-select"
                                         disabled="@(_loading || !_igvTypes.Any())">
                                <option value="@Guid.Empty">-- Seleccione --</option>
                                @foreach (var igvType in _igvTypes)
                                {
                                    <option value="@igvType.Id">@igvType.Description</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => _product.IGVTypeId)" class="text-danger small" />
                        </div>

                        <!-- Categoría -->
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-folder me-1"></i>
                                Categoría <span class="text-danger">*</span>
                            </label>
                            <InputSelect @bind-Value="_product.CategoryId"
                                         class="form-select"
                                         disabled="@(_loading || !_categories.Any())">
                                <option value="@Guid.Empty">-- Seleccione --</option>
                                @foreach (var category in _categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => _product.CategoryId)" class="text-danger small" />
                        </div>

                        <!-- Descripción -->
                        <div class="col-12">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-text-paragraph me-1"></i>
                                Descripción
                            </label>
                            <InputTextArea @bind-Value="_product.Description"
                                           class="form-control"
                                           rows="3"
                                           placeholder="Descripción detallada del producto (opcional)"
                                           maxlength="200"
                                           disabled="@_loading" />
                            <div class="form-text">@(_product.Description?.Length ?? 0) / 200 caracteres</div>
                            <ValidationMessage For="@(() => _product.Description)" class="text-danger small" />
                        </div>

                        <!-- Precios -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-currency-dollar me-1"></i>
                                Precio de Compra <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">S/</span>
                                <InputNumber @bind-Value="_product.PurchasePrice"
                                             class="form-control"
                                             placeholder="0.00"
                                             step="0.01"
                                             disabled="@_loading" />
                            </div>
                            <ValidationMessage For="@(() => _product.PurchasePrice)" class="text-danger small" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-tag-fill me-1"></i>
                                Precio de Venta <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">S/</span>
                                <InputNumber @bind-Value="_product.SalePrice"
                                             class="form-control"
                                             placeholder="0.00"
                                             step="0.01"
                                             disabled="@_loading" />
                            </div>
                            <ValidationMessage For="@(() => _product.SalePrice)" class="text-danger small" />
                        </div>

                        @if (_product.PurchasePrice > 0 && _product.SalePrice > 0)
                        {
                            var margin = ((_product.SalePrice - _product.PurchasePrice) / _product.SalePrice) * 100;
                            <div class="col-12">
                                <div class="alert @(margin > 0 ? "alert-info" : "alert-warning") d-flex align-items-center mb-0" role="alert">
                                    <i class="bi bi-info-circle-fill me-2"></i>
                                    <div>
                                        <strong>Margen de ganancia:</strong> @margin.ToString("N2")%
                                        @if (margin <= 0)
                                        {
                                            <span class="ms-2">(El precio de venta debe ser mayor al de compra)</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" @onclick="Close" disabled="@_loading">
                        <i class="bi bi-x-circle me-1"></i>
                        Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary" disabled="@_loading">
                        @if (_loading)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            <span>Creando...</span>
                        }
                        else
                        {
                            <i class="bi bi-check-circle me-1"></i>
                            <span>Crear Producto</span>
                        }
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private bool _show = false;
    private bool _loading = false;
    private bool _loadingCatalogs = true;
    private CreateProductModel _product = new();
    private List<UnitOfMeasureSelectModel> _unitOfMeasures = new();
    private List<IGVTypeSelectModel> _igvTypes = new();
    private List<CategoryListModel> _categories = new();

    [Parameter]
    public EventCallback OnProductCreated { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await LoadCatalogs();
    }

    private async Task LoadCatalogs()
    {
        _loadingCatalogs = true;
        try
        {
            _unitOfMeasures = await UnitOfMeasureService.GetAllUnitOfMeasuresSelectAsync();
            _igvTypes = await IGVTypeService.GetAllIGVTypesSelectAsync();
            _categories = await CategoryService.GetAllCategoriesAsync();
        }
        catch (Exception ex)
        {
            ToastService.ShowError("Error al cargar los catálogos: " + ex.Message);
        }
        finally
        {
            _loadingCatalogs = false;
        }
    }

    public void Open()
    {
        _show = true;
        _product = new();
        SetDefaultValues();
        StateHasChanged();
    }

    public void Close()
    {
        if (!_loading)
        {
            _show = false;
            StateHasChanged();
        }
    }

    private void HandleBackdropClick()
    {
        if (!_loading)
        {
            Close();
        }
    }

    private async Task HandleValidSubmit()
    {
        _loading = true;

        try
        {
            var response = await ProductService.CreateProductAsync(_product);

            if (response.IsSuccessStatusCode)
            {
                ToastService.ShowSuccess($"El producto '{_product.Name}' se creó correctamente.", "Producto Creado");
                Close();
                await OnProductCreated.InvokeAsync();
            }
            else
            {
                var errorResponse = await response.Content.ReadFromJsonAsync<Dictionary<string, List<string>>>();
                var errors = errorResponse?["errors"] ?? new List<string> { "Error desconocido al crear el producto." };

                foreach (var error in errors)
                {
                    ToastService.ShowError(error, "Error al Crear Producto");
                }
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Ocurrió un error inesperado: {ex.Message}", "Error");
        }
        finally
        {
            _loading = false;
        }
    }

    private void SetDefaultValues()
    {
        var unitDefault = _unitOfMeasures.FirstOrDefault(um => um.Description == "Unidad");
        _product.UnitOfMeasureId = unitDefault?.Id ?? Guid.Empty;

        var igvDefault = _igvTypes.FirstOrDefault(it => it.Description == "Gravado - Operación onerosa");
        _product.IGVTypeId = igvDefault?.Id ?? Guid.Empty;

        var categoryDefault = _categories.FirstOrDefault(c => c.Name == "Otros");
        _product.CategoryId = categoryDefault?.Id ?? Guid.Empty;
    }
}
